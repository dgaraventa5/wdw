    <script src="node_modules_ui/mobile-angular-ui/dist/js/mobile-angular-ui.min.js"></script>
	<link rel="stylesheet" type="text/css" href="/assets/css/events.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="https://fonts.googleapis.com/css?family=Didact+Gothic" rel="stylesheet">
</head>
<body>
	<!-- desktop landing page -->
	<div id="welcome-div" class="desktop-only scrollable">
	    <div id="desktop-background" class="scrollable-content">  
	      <div id="desktop-only-header">
	        <img src="/assets/images/wdw_top.png">
	      </div>
	      <div class="row desktop-row">
	        <div class="col-sm-12 col-md-7 col-lg-9 desktop-details">
	          <h1>Plan</h1>
	          <h1>Something</h1>
	          <h1>Awesome</h1>
	          <div class="desktop-fb-div">
	            <h3>Integrated with <img id="FBlogo" src="/assets/images/fblogo.png"> Facebook</h3>
	          </div>
	          <div class="desktop-mobile-only-div">
	            <h4>Currently available only on your mobile web browser.</h4>
	            <h4>iOS, Android, desktop and tablet coming soon.</h4>
	          </div>
	        </div>
	        <div class="col-sm-12 col-md-5 col-lg-3 desktop-screenshot">
	          <h3>"The Social To-Do List"</h3>
	          <img id="iphone-screenshot" src="/assets/images/WDWEventScreen_iphone6_gold_portrait.png">
	        </div>
	      </div>
	    </div>
	  </div>
	  <!-- mobile site -->
	<div class="app mobile-only">	
		<div class='app-body'>
      		<div class='app-content'>
				<div id="welcome-div" class="scrollable mobile-only">
					<div id="welcome-overlay" class="scrollable-content">
						<h1>Who's Doing What</h1>
						<h4>The "Social" To-Do List</h4>
						<a href="/auth/facebook"><button class="btn btn-lg"><i class="fa fa-facebook-official" aria-hidden="true"></i>Log In with Facebook</button></a>
						<p>Who's Doing What allows you to utilize their existing Facebook friends, groups, and events to plan something awesome. Therefore, we requires users to log in with their FB accounts and allow us permission to access this data.</p>
						<p>Don't worry, we won't post anything!</p>
						<p id="privacypolicy"><a href="#/privacypolicy">Privacy Policy</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
